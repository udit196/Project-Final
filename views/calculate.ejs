<body>
    <%- include('navbar') %>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <form id="form">
                    <label class="labels">Electricity Usage (kWh):</label>
                    <input type="number" name="electricityUsageKWh" required>
            
                    <label class="labels">Transportation (Gallons/Month):</label>
                    <input type="number" name="transportationUsageGallonsPerMonth" required>
            
                    <label class="labels">Short-Haul Flights (per year):</label>
                    <input type="number" name="flightsShortHaul" required>
            
                    <label class="labels">Medium-Haul Flights (per year):</label>
                    <input type="number" name="flightsMediumHaul" required>
            
                    <label class="labels">Long-Haul Flights (per year):</label>
                    <input type="number" name="flightsLongHaul" required>
                    
                    <label class="labels">Dietary Choice:</label>
                    <select name="dietaryChoice" required>
                        <option value="Vegan">Vegan</option>
                        <option value="Vegetarian">Vegetarian</option>
                        <option value="Pescatarian">Pescatarian</option>
                        <option value="MeatEater">MeatEater</option>
                    </select>

                    <label for ="city" class="labels">City:</label>
                    <input type="text" id ="city" name="city" required>

                    <label for = "country" class="labels">State:</label>
                    <input type="text"  id ="country" name="country" required>
            
                    <button id="loc-btn">Get Location</button>
                    <button id="btn" type="submit">Calculate Emissions</button>
                </form>
            </div>
            <div class="col-md-6">
                <div id="right"></div>
            </div>
        </div>

    </div>
    <hr>
    <!-- <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script> -->
    <script>
        form = document.getElementById("form");
        btn = document.getElementById("btn");
        disp = document.getElementById("right");
        form.addEventListener("submit", async function sn(event){
            event.preventDefault(); // Prevents the form from submitting normally

        const formData = new FormData(this);
        const data = Object.fromEntries(formData.entries()); 
        const ready_data = JSON.stringify(data)

        console.log("clicked")
            let response = await fetch("/calculate", {
            method:"post",
            headers: {
                'Content-Type': 'application/json'
            },
            body:ready_data});
            response.json().then((response)=>{
                response = JSON.parse(response)
            right.innerHTML = 
            
            `<h2>Your Emissions</h2>
            <h5>electricityEmissions:${response.ElectricityEmissions}</h5>
            <h5>transportationEmissions:${response.TransportationEmissions}</h5>
            <h5>airTravelEmissionsShortHaul:${response.AirTravelEmissionsShortHaul}</h5>
            <h5>airTravelEmissionsMediumHaul:${response.AirTravelEmissionsMediumHaul}</h5>
            <h5>airTravelEmissionsLongHaul:${response.AirTravelEmissionsLongHaul}</h5>
            <h5>totalAirTravelEmissions:${response.TotalAirTravelEmissions}</h5>
            <h5>yearlyElectricityEmissions:${response.YearlyElectricityEmissions}</h5>
            <h5>yearlyTransportationEmissions:${response.YearlyTransportationEmissions}</h5>
            <h5>dietaryChoiceEmissions:${response.DietaryChoiceEmissions}</h5>
            <h5>totalYearlyEmissions:${response.TotalYearlyEmissions}</h5>
            <h3>${response.Message}</h3>`
            })
        })
    </script>

    <script>
        const getbutton = document.getElementById("loc-btn");
        const apiKey = '8bb3690ec19ea5eed14933f74db632b0';
        getbutton.addEventListener("click", getDetails);
        
        var cityField = document.getElementById("city"); 
        var countryField = document.getElementById("country"); 

        async function getDetails(){
            var lat = '22.7195687';
            var lon = '75.8577258';
            await navigator.geolocation.getCurrentPosition(position => {
                lat = position.coords.latitude;
                lon = position.coords.longitude;
            });
            const apiURL = `http://api.openweathermap.org/geo/1.0/reverse?lat=${lat}&lon=${lon}&limit=1&appid=8bb3690ec19ea5eed14933f74db632b0`;
            const response = await fetch(apiURL);
        
            const result = await response.json();
            cityField.value = result[0].name;
            countryField.value = result[0].state;

            console.log(cityField);
            console.log(countryField);
        }
        
    </script>
</body>
</html>